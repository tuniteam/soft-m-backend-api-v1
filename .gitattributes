# Auto detect text files and perform LF normalization
* text=auto

# Force LF for specific files
*.ts text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.sql text eol=lf
*.toml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Force LF for Prisma files
prisma/schema.prisma text eol=lf
prisma/migrations/**/*.sql text eol=lf
prisma/migrations/**/migration_lock.toml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
