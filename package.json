{
  "name": "soft-m-api",
  "version": "1.1.0",
  "description": "SOFT-M Backend API - Gestion PÃ©riscolaire (Module Clients)",
  "author": "SOFT-M Team",
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:seed": "npx tsx prisma/seed.ts",
    "docker:rebuild:prod": "docker-compose down && docker-compose build --no-cache api && docker-compose up -d",
    "docker:rebuild:fast:prod": "docker-compose build api && docker-compose up -d",
     "docker:rebuild:dev": "docker-compose -f docker-compose.dev.yml down && docker-compose -f docker-compose.dev.yml build --no-cache api && docker-compose -f docker-compose.dev.yml up -d",
    "docker:rebuild:fast:dev": "docker-compose -f docker-compose.dev.yml build api && docker-compose -f docker-compose.dev.yml up -d",
  
    "docker:logs": "docker-compose logs -f api",
    "swagger:check": "curl http://localhost:3000/api/docs-json",
    "dev:workflow": "scripts\\dev-workflow.bat",
    "verify": "npm run build && npm test && npm run docker:rebuild:fast"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.0.3",
    "@paralleldrive/cuid2": "^3.0.4",
    "@prisma/client": "^6.19.1",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "babel-plugin-istanbul": "^7.0.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "jest": "^30.2.0",
    "prettier": "^3.4.2",
    "prisma": "^6.19.1",
    "source-map-support": "^0.5.21",
    "test-exclude": "^7.0.1",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3"
  },
  "overrides": {
    "inflight": "npm:lru-cache@^10.0.0",
    "glob": "^10.0.0",
    "rimraf": "^5.0.0"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@paralleldrive/cuid2|@noble/hashes)/)"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coverageProvider": "v8"
  }
}
